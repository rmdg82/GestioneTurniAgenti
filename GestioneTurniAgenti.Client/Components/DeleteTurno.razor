            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="@TurnoToDelete.AgenteNome" />
            </div>

            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="@TurnoToDelete.AgenteCognome" />
            </div>

            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="@TurnoToDelete.AgenteMatricola" />
            </div>

