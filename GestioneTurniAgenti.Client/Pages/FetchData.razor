@page "/fetchdata"
@inject HttpClient Http

<h1>Agenti</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (agenti == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Matricola</th>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Reparto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agente in agenti)
            {
                <tr>
                    <td>@agente.Matricola</td>
                    <td>@agente.Nome</td>
                    <td>@agente.Cognome</td>
                    <td>@agente.NomeReparto</td>
                </tr>
            }
        </tbody>
    </table>
}